    "@types/webpack": "4.4.5",
    "mkdirp": "^0.5.1",
    "nanoid": "^1.0.7",
    "ncp": "^2.0.0",
    "nodemon": "^1.18.1",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "webpack": "4.15.1",
    "webpack-cli": "3.0.8"
  }
}
