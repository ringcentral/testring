{
  "name": "testring-build",
  "private": true,
  "author": "RingCentral",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ringcentral/testring.git"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "reinstall": "npm run cleanup && npm install && npm run build",
    "cleanup": "npm run cleanup:packages && npm run cleanup:root",
    "cleanup:root": "node ./bin/cleanup.js",
    "cleanup:packages": "lerna clean --yes && lerna exec --parallel -- node ../../bin/cleanup",
    "add-package-files": "lerna exec --no-sort -- node ../../bin/add-package-files",
    "generate-readme": "lerna exec --no-sort -- node ../../bin/generate-readme",
    "lint": "lerna exec --parallel --no-sort -- eslint ./**/*.ts",
    "lint:fix": "lerna exec --parallel --no-sort --no-bail -- eslint --fix ./**/*.ts",
    "test": "lerna exec --ignore=\"@testring/@(ui-kit|types|e2e-test-app)\" -- mocha",
    "test:watch": "lerna exec --ignore=\"@testring/@(ui-kit|types|e2e-test-app)\" --parallel -- mocha --watch",
    "test:e2e": "lerna run --stream --scope @testring/e2e-test-app e2e",
    "test:e2e-screenshots": "lerna run --stream --scope @testring/e2e-test-app e2e-screenshots",
    "test:e2e-simple": "lerna run --stream --scope @testring/e2e-test-app e2e-simple",
    "test:coverage": "nyc npm test",
    "test:publish": "coveralls < ./coverage/lcov.info && rimraf ./coverage/lcov-report -G",
    "test:ci": "npm run test:coverage && npm run test:e2e && npm run test:e2e-screenshots && npm run test:publish",
    "build": "npm run build:main && npm run build:devtool && npm run build:extension",
    "build:main": "lerna exec --ignore=\"@testring/@(e2e-test-app|devtool-frontend|devtool-extension|ui-kit)\" -- tsc --target es2015",
    "build:devtool": "lerna run --stream --scope @testring/devtool-frontend build",
    "build:extension": "lerna run --stream --scope @testring/devtool-extension build",
    "build:watch": "lerna exec --ignore=\"@testring/@(e2e-test-app|devtool-frontend|devtool-extension|ui-kit)\" --parallel -- tsc --target es2015 --watch --inlineSourceMap",
    "build:clear": "npm run lint && npm run build",
    "build:precommit": "npm run check-deps:precommit && npm run build:clear && npm run test && npm run test:e2e-simple",
    "build:ci": "npm run build:clear && npm run test:ci",
    "publish:version": "lerna version --exact",
    "publish:ci": "node ./bin/publish.js",
    "storybook": "lerna run --stream --scope @testring/ui-kit storybook",
    "check-deps": "npm run check-deps:precommit && npm run check-deps:root && npm run check-deps:packages",
    "check-deps:precommit": "lerna exec -- node ../../bin/check-packages-versions",
    "check-deps:root": "ncu --deep --color",
    "check-deps:update": "lernaupdate",
    "check-deps:dedupe": "lernaupdate -d"
  },
  "precommit": "build:precommit",
  "nyc": {
    "all": true,
    "check-coverage": true,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 45,
    "sourceMap": true,
    "include": [
      "core/*/src/*.ts",
      "core/*/src/**/*.ts",
      "packages/*/src/*.ts",
      "packages/*/src/**/*.ts"
    ],
    "exclude": [
      "core/*/src/index.ts",
      "core/types",
      "packages/*/src/index.ts",
      "packages/web-application/src/web-application.ts",
      "packages/web-application/src/web-client.ts",
      "packages/plugin-selenium-driver/src/plugin/index.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "devDependencies": {
    "@jsdevtools/npm-publish": "1.4.3",
    "@lerna/batch-packages": "3.16.0",
    "@lerna/filter-packages": "4.0.0",
    "@lerna/project": "4.0.0",
    "@lerna/run-parallel-batches": "3.16.0",
    "@types/chai": "4.2.21",
    "@types/mocha": "8.2.3",
    "@types/node": "14.6.0",
    "chai": "4.3.4",
    "coveralls": "3.1.1",
    "eslint": "7.22.0",
    "eslint-config-ringcentral-typescript": "5.0.0",
    "glob": "7.1.7",
    "lerna": "4.0.0",
    "lerna-update-wizard": "0.17.8",
    "mocha": "9.0.2",
    "npm-check-updates": "11.8.3",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "rimraf": "3.0.2",
    "sinon": "11.1.1",
    "ts-node": "10.1.0",
    "typescript": "4.3.5"
  }
}
